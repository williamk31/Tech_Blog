<div class="text-center">
    <h2>{{title}}</h2>
    <p>{{content}}</p>
    <p>Created by {{user.name}}</p>
    <h3>Comments</h3>
    <p>
        {{#each comments as |comment|}}
        {{> comments}}
        {{/each}}</p>
    <p>
        <button class="btn btn-primary" id="comment-add">Add Comment</button>
    </p>
</div>

<div class="row mt-4" id="comment-form" style="display: none;">
  <div class="col-md-6">
    <h3>Add a Comment:</h3>

    <form class="form new-comment-form">
        <div class="form-group">
        <label for="blog-id"></label>
        <input class="form-input" type="hidden" id="blog-id" name="blog-id" value="{{id}}"/>
      </div>
      <div class="form-group">
        <label for="comment-title">title:</label>
        <input class="form-input" type="text" id="comment-title" name="comment-title" />
      </div>
      <div class="form-group">
        <label for="comment">comment:</label>
        <textarea class="form-input" id="comment" name="comment"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="comment-submit">Add Comment</button>
      </div>
    </form>
  </div>
  </div>

<script src="/js/comments.js"></script>